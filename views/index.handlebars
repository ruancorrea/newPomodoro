<script>
    $('#containerPO').jrumble({
        speed: 100,
        rumbleEvent: 'trigger'
    });
    const button = document.getElementById('pause');
    button.addEventListener('click', function(){
        const audio = document.getElementById('alarm');
        $("#containerPO").trigger('stopRumble');
        audio.pause();    
        document.querySelector('#minutes').innerHTML = JSON.parse(localStorage.getItem('minuto'));
        document.querySelector('#seconds').innerHTML = JSON.parse(localStorage.getItem('segundo'));
        document.querySelector('#cont').innerHTML = JSON.parse(localStorage.getItem('contador'));
        $("#pause").attr("disabled", true)
        document.title = "Pomodoro"
    })

    const audio = document.getElementById('alarm');

    function processar(){
        pomodoro.init();
    }

    function audioInicio(){
        audio.play();
        $("#pause").attr("disabled", false)
        
        $("#work").attr("disabled", true)
        $("#stop").attr("disabled", true)
        $("#reset").attr("disabled", true)
        $('#button-addon2').attr("disabled",true)
        $('containerPO').trigger('startRumble');
    }

    $('#pause').click(()=>{
        $("#work").attr("disabled", false)
        $("#stop").attr("disabled", false)
        $("#reset").attr("disabled", false)
        $('#button-addon2').attr("disabled",false)
    })

    $(document).ready(function(){
        document.title = "Pomodoro"

        $('#button-addon2').on('click', function(){
            control();
            $("#work").attr("disabled", false)
            $("#stop").attr("disabled", false)
            $("#reset").attr("disabled", false)
        })
            // Exibe ou oculta o botão
            $(window).scroll(function() {
                if ($(this).scrollTop() > 200) {
                    $('.voltar-ao-topo').fadeIn(200);
                    $('#menu-toggle').fadeIn(200);
                } else {
                    $('.voltar-ao-topo').fadeOut(200);
                }
            });
            
            // Faz animação para subir
            $('.voltar-ao-topo').click(function(event) {
                event.preventDefault();
                $('html, body').animate({scrollTop: 0}, 300);
            })
        });
</script>